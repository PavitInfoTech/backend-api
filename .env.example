APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite front-end variable removed (API-only)

# ---------------------------------------------
# External / 3rd party services used by API
# ---------------------------------------------

# Google OAuth (Social login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT=${APP_URL}/api/auth/google/callback

# GitHub OAuth (Social login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT=${APP_URL}/api/auth/github/callback

# Gorq AI service - API key & base url
GORQ_API_KEY=
GORQ_BASE_URL=https://api.gorq.ai
GORQ_DEFAULT_MODEL=gpt-4o-mini

# Google Maps
GOOGLE_MAPS_API_KEY=
# NOTE: The Google Maps API requires an enabled billing account and the
# Geocoding API (+ Static Maps API) enabled in the Google Cloud Console.
# This key is used for geocoding addresses and generating static map URLs.

# Frontend / allowed origins (for CORS / SPA callbacks)
# Set FRONTEND_URL with NO trailing slash, e.g. https://pavitinfotech.com
FRONTEND_URL=http://localhost:3000

# Optionally list multiple origins (comma separated) to allow from the API host.
# CORS_ALLOWED_ORIGINS=https://pavitinfotech.com
# Enable/disable allowing credentials (cookies) in cross-origin requests
# CORS_SUPPORTS_CREDENTIALS=true

# API domain (if you host the API on a subdomain and want routes at the root path)
# e.g. API_DOMAIN=api.example.com
API_DOMAIN=

# API Authentication
# If you use Laravel Sanctum, add your SPA domains here
SANCTUM_STATEFUL_DOMAINS=localhost
# AI rate limiter (requests per minute per user/ip)
AI_RATE_LIMIT_PER_MINUTE=60

# Number of minutes to keep token cookie (api_token) when callback sets it. Default ~30 days
SANCTUM_COOKIE_TTL=43200

# Security options
# When true, all user's access tokens (Sanctum personal access tokens) are revoked when the
# user resets or changes their password. Set to false to keep existing tokens valid after password changes.
REVOKE_TOKENS_ON_PASSWORD_CHANGE=true

